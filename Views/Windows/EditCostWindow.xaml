<Window
    x:Class="Namordnik.Views.Windows.EditCostWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Namordnik.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Изменить цены"
    Width="300"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Style="{DynamicResource Header}" Text="Изменение цены" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="Изменить цены на..." />
            <TextBox x:Name="tbCost" MinWidth="100" />
        </StackPanel>
        <Button
            x:Name="btnSave"
            Grid.Row="2"
            HorizontalAlignment="Center"
            Click="BtnSave_Click"
            Content="Сохранить" />
    </Grid>
</Window>
